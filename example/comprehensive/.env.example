# Server Configuration
HOST=localhost
PORT=8080

# Timeout Settings
READ_TIMEOUT=10s
WRITE_TIMEOUT=10s
IDLE_TIMEOUT=120s
SHUTDOWN_TIMEOUT=30s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
IS_DEBUG=false

# Middleware Configuration
ENABLE_REAL_IP=true
ENABLE_RECOVERER=true
ENABLE_COMPRESS=true
ENABLE_CORS=true
ENABLE_RATE_LIMIT=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,HEAD,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_EXPOSED_HEADERS=
CORS_ALLOW_CREDENTIALS=false
CORS_OPTIONS_PASSTHROUGH=false
CORS_MAX_AGE=86400

# Rate Limiting Configuration (when ENABLE_RATE_LIMIT=true)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1m

# Body Limit Configuration
BODY_LIMIT=4194304

# Request Logging
ENABLE_REQUEST_LOGGER=true

# Request ID
ENABLE_REQUEST_ID=true
